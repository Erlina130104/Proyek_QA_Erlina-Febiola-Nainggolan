		{
			"name": "TEST CASE 1 - LOGIN & GET TOKEN",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test 1: Status harus 200\r",
							"pm.test(\"Login successful - Status 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Test 2: Response time < 2 detik\r",
							"pm.test(\"Response time acceptable\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
							"});\r",
							"\r",
							"// Test 3: Token ada di response\r",
							"pm.test(\"Access token exists\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.access_token).to.exist;\r",
							"});\r",
							"\r",
							"// Test 4: SIMPAN token ke environment (PENTING!)\r",
							"pm.test(\"Save token to environment\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.environment.set(\"token\", jsonData.access_token);\r",
							"    console.log(\"Token saved:\", jsonData.access_token);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
